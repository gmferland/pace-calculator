{
    "compilerOptions": {
        "target": "ES5",
        "module": "commonjs",
        "allowJs": true,
        "jsx": "react",
        "jsxFactory": "h",
        "sourceMap": true,
        "downlevelIteration": true,
        "strict": true,
        "noImplicitAny": true,
        "noImplicitThis": true,
        // "noUnusedLocals": true,
        "noImplicitReturns": true,
        "noFallthroughCasesInSwitch": true,
        // "noUnusedParameters": true,
        "moduleResolution": "node",
        "baseUrl": "./src",
        "paths": {
            "app/*": [
                "app/*"
            ],
            "common/*": [
                "common/*"
            ]
        },
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "skipLibCheck": true
    },
    "include": [
        "src/**/*.tsx",
        "src/**/*.ts"
    ]
}
